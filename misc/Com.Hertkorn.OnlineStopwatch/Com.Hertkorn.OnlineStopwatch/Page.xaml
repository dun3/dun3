<UserControl 
    x:Class="Com.Hertkorn.OnlineStopwatch.Page" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:c="clr-namespace:Com.Hertkorn.OnlineStopwatch" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Width="600" 
    Height="500">
    <Grid Background="DeepSkyBlue">
        <c:AnalogClock 
            IsReverse="True" 
            Hour="{Binding Source={x:Static sys:DateTime.Now.Hour}}" 
            Minute="{Binding Source={x:Static sys:DateTime.Now.Minute}}" 
            Second="{Binding Source={x:Static sys:DateTime.Now.Second}}" 
            Millisecond="{Binding Source={x:Static sys:DateTime.Now.Millisecond}}">            
        </c:AnalogClock>
    </Grid>
</UserControl>
